package test;

import javax.microedition.midlet.MIDlet;
import javax.microedition.rms.RecordStore;

public class Ex2 extends MIDlet {
	private RecordStore rs = null;
	static final String REC_STORE = "ReadWriteRMS";

	public void startApp() {
		openRecStore();
		writeRecord("J'ai écris dans le premier RecordStore");
		writeRecord("Puis dans le second, et je vais ensuite les lire.");
		readRecords();
		closeRecStore();
		deleteRecStore();
	}

	public void pauseApp() {
	}

	public void destroyApp(boolean unconditional) {
		notifyDestroyed();
	}
	//Ouvre un nouveau Record Store
	public void openRecStore() {
		try {
			rs = RecordStore.openRecordStore(REC_STORE, true);
		} catch (Exception e) {
		}
	}
	//Ferme les Record Store
	public void closeRecStore() {
		try {
			rs.closeRecordStore();
		} catch (Exception e) {
		}
	}
	//Détruit le records
	public void deleteRecStore() {
		if (RecordStore.listRecordStores() != null) {
			try {
				RecordStore.deleteRecordStore(REC_STORE);
			} catch (Exception e) {
			}
		}
	}
	//Ajoute un enregistrement dans le rs
	public void writeRecord(String str) {
		byte[] rec = str.getBytes();
		try {
			rs.addRecord(rec, 0, rec.length);
		} catch (Exception e) {
		}
	}
	//Lecture de rs
	public void readRecords() {
		try {
			byte[] recData = new byte[5];
			int len;

			for (int i = 1; i <= rs.getNumRecords(); i++) {
				if (rs.getRecordSize(i) > recData.length) {
					recData = new byte[rs.getRecordSize(i)];
				}
				len = rs.getRecord(i, recData, 0);
				System.out.println("------------------------------");
				System.out.println("Record " + i + " : " + new String(recData, 0, len));
				System.out.println("------------------------------");
			}
		} catch (Exception e) {
		}
	}
}